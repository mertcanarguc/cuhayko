<% layout("layout") %>

    <section class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_2.jpg');"
        data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-end">
                <div class="col-md-9 ftco-animate pb-5">
                    <p class="breadcrumbs mb-2"><span class="mr-2"><a href="/">Anasayfa <i
                                    class="ion-ios-arrow-forward"></i></a></span> <span>Galeri <i
                                class="ion-ios-arrow-forward"></i></span></p>
                    <h1 class="mb-0 bread">Galeri</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="ftco-section">
        <div class="container">
            <div class="row">
                <% galeri.forEach(element=> { %>
                    <div class="col-md-4 ftco-animate">
                        <div class="work mb-4 img d-flex align-items-end"
                            style="background-image: url(<%=element.url%>);">
                            <a href="<%=element.url%>"
                                class="icon image-popup d-flex justify-content-center align-items-center">
                                <span class="fa fa-expand"></span>
                            </a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </section>